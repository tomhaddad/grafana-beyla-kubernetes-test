{
  "name": "node-grpc-service",
  "version": "0.0.1",
  "description": "Simple NodeJS gRPC service",
  "main": "dist/index.js",
  "engines": {
    "npm": ">=10",
    "node": ">=20"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "build": "tsc",
    "lint": "eslint --ext .ts --max-warnings 0 src/",
    "lint:fix": "npm run lint -- --fix",
    "dev": "nodemon",
    "start": "node dist/index.js",
    "test": "node --test"
  },
  "author": "Tom Haddad",
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "ts-node src/index.ts"
  },
  "dependencies": {
    "dotenv": "~16.4.1",
    "nice-grpc": "~2.1.7",
    "pino": "^8.18.0",
    "pino-pretty": "^10.3.1"
  },
  "devDependencies": {
    "@types/node": "~20.11.16",
    "@typescript-eslint/eslint-plugin": "~6.20.0",
    "@typescript-eslint/parser": "~6.20.0",
    "eslint": "~8.56.0",
    "eslint-config-prettier": "~9.1.0",
    "eslint-plugin-prettier": "~5.1.3",
    "nodemon": "~3.0.3",
    "proto": "file:../../proto",
    "prettier": "~3.2.5",
    "ts-node": "~10.9.2",
    "typescript": "~5.3.3"
  }
}
